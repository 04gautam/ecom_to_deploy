<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>STARK Technologies</title>
   <link href="/css/output.css" rel="stylesheet">
</head>


<body class="bg-gray-100 font-sans">
  
  <% if (cartMsg) { %>
    <div style="position: relative;">
      <div class="absolute top-4 left-1/2 transform -translate-x-1/2 bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 rounded shadow-lg">
        <p><%= cartMsg %></p>
      </div>
    </div>
    <% } %>
    
    
    <!-- Header -->
   <div class="mb-10">

     <header class="fixed top-0 left-0 right-0 bg-gray-800 shadow-md py-4 z-50">
    <div class="container mx-auto flex justify-between items-center pl-4 pr-2">
      <!-- Logo -->
      <a href="/shop" class="text-2xl border-b border-white font-bold text-white">STARK</a>
             
      <form class="lg:w-full md:w-full h-6 flex items-center justify-center" action="/filter" method="get">

       <input name="filterItem" placeholder="Search Items.." type="text" class=" p-4 rounded-md ml-2 h-full w-32 lg:w-1/2 md:w-1/2 text-black" required> 
      
       <button class="border-l-2 p-1 text-center border-black mr-2 bg-white rounded" type="submit">
        <i class="fa fa-search">
        </i>
      </button>
</form>
   
    
   
      <nav class="flex gap-x-3 mr-2">
        <!-- <a href="/shop" class="hover:text-gray-300 text-white">Shop</a> -->
        <!-- <a href="/cart" class="hover:text-gray-300 text-white "><i title="cart" class="fa fa-shopping-cart" style="font-size:24px"></i></a> -->
         <div class="relative inline-block">
  <a href="/cart" class="hover:text-gray-300 text-white ">
    <i class="fa fa-shopping-cart text-gray-400" style="font-size:21px">

    </i>
    
  <span class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs">
  <%=cartLen%>
  </span>
</div></a>

        <!-- <a href="/logout" class="text-red-500 hover:text-red-400">Account</a> -->
        <a href="/user/account" class="text-red-500 hover:text-red-400">Account</a>
      </nav>
    
      <!-- Navigation Links -->
      
    </div>
  </header>
   </div>

  
  <!-- Display Cart Message -->
  

  <!-- Product Grid -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% allProduct.reverse().forEach((ele) => { %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Product Image -->
        <img 
          src="data:image/jpeg;base64,<%= ele.image.toString('base64') %>" 
          alt="Product Image" 
          class="w-full h-56 object-cover"
        >

        <!-- Product Details -->
        <div class="p-4">
          <!-- Product Name -->
          <h2 class="text-lg font-semibold text-gray-800"><%= ele.name %></h2>

          <!-- Product Description -->
          <p class="text-gray-600 text-sm mt-2">
            <%= ele.discription%>
          </p>

          <!-- Price and Button -->
           <div class="flex items-center mt-4 justify-between">
          <div>
            <span class="text-xl font-bold text-indigo-600">&#x20b9; <%= ele.price %></span>
            <span class="text-xl ml-2 text-red-600"><%= ele.discount%>% off</span>
           </div>
            <!-- Add to Cart Button -->
            <a href="/cart/<%= ele._id %>" 
              class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
              Add to Cart
            </a>
           
            </a>
    


          </div>
           
        </div>

      </div>

      <% }) %>
    </div>

  </div>
  

     <%- include('../partials/footer.ejs') %>
   
</body>


</html>
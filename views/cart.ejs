<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Card</title>
   <link href="/css/output.css" rel="stylesheet">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body class="bg-gray-100 font-sans">
  <!-- Header -->
   
<div class="mb-10">

     <div class="fixed top-0 left-0 right-0 bg-gray-800 shadow-md py-4 z-50">
    <div class="container mx-auto flex justify-between items-center pl-4 pr-2">
      <!-- Logo -->
      <a href="/shop" class="text-2xl border-b border-white font-bold text-white">STARK</a>
             
      <form class="lg:w-full md:w-full h-6 flex items-center justify-center" action="/filter" method="get">

       <input name="filterItem" placeholder="Search Items.." type="text" class=" p-4 rounded-md ml-2 h-full w-32 lg:w-1/2 md:w-1/2 text-black" required> 
      
         <button class="border-l-2 p-1 text-center border-black mr-2 bg-white rounded" type="submit">
        <i class="fa fa-search">
        </i>
      </button>
</form>
   
    
   
      <nav class="flex gap-x-3 mr-2">
        <!-- <a href="/shop" class="hover:text-gray-300 text-white">Shop</a> -->
        <!-- <a href="/cart" class="hover:text-gray-300 text-white "><i title="cart" class="fa fa-shopping-cart" style="font-size:24px"></i></a> -->
         <div class="relative inline-block">
  <a href="/cart" class="hover:text-gray-300">

    <i class="fa fa-shopping-cart" style="font-size:24px; color: white">
     

    </i>
  <span class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs">
 <%= cartLen%>
  </span>
</div></a>

        <!-- <a href="/logout" class="text-red-500 hover:text-red-400">Logout</a> -->
<a href="/user/account" class="text-red-500 hover:text-red-400">Account</a>

      </nav>
    
      <!-- Navigation Links -->
      
    </div>
  </header>

   </div>
</div>


  <!-- Display Cart Message -->
  <% if(cartUser.length <= 0){ %>
  <div class="h-screen grid content-center justify-center container text-center ">
      <h1 class="text-red-600 text-2xl font-bold">Cart is empty</h1>
      <h1 class="text-gray-700">Add something Please..</h1>
   
    <% } %>
  </div>

  <!-- Cart Items Grid -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% cartUser.forEach((cart) => { %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Product Image -->
        <img 
          src="data:image/jpeg;base64,<%= cart.image.toString('base64') %>" 
          alt="Product Image" 
          class="w-full h-56 object-cover"
        >
  
        <!-- Product Details -->
        <div class="p-4">
          <!-- Product Name -->
          <h2 class="text-lg font-semibold text-gray-800"><%= cart.name %></h2>
  
          <!-- Product Description -->
          <p class="text-gray-600 text-sm mt-2">
            <%=cart.discription%>
          </p>
  
          <!-- Price and Buttons -->
          <div class="flex items-center justify-between mt-4">
            <span class="text-xl font-bold text-indigo-600">&#x20b9; <%= cart.price %></span>
          </div>
          <div class="flex space-x-4 mt-4 justify-between">
           
            <!-- Delete Button -->
            <a href="/delete/<%= cart._id %>" 
              class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
              Delete
            </a>

             <!-- Buy Button -->
            <a href="/email/<%= cart._id %>" 
              class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
              Buy
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
